    "sharp": "^0.33.0",
    "qrcode": "^1.5.3",
    "archiver": "^6.0.1",
    "fs-extra": "^11.1.1",
    "xlsx": "^0.18.5",
    "axios": "^1.6.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/fs-extra": "^11.0.4",
    "@types/qrcode": "^1.5.5",
    "@types/archiver": "^6.0.2",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.16.5"
