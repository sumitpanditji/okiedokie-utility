{
  "name": "okiedokie-utility-backend",
  "version": "1.0.0",
  "description": "Backend server for OKIEDOKIE-UTILITY",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec \"npx tsx\" src/index.ts",
