# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-firebase-app.web.app

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads
DOWNLOAD_DIR=downloads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://your-firebase-app.web.app

# Google Drive Configuration (for Document Link Fetcher)
GOOGLE_DRIVE_API_KEY=your_api_key_here
GOOGLE_DRIVE_CLIENT_ID=your_client_id_here

# QR Code Configuration
QR_CODE_DEFAULT_SIZE=256
QR_CODE_DEFAULT_MARGIN=4

# Image Processing Configuration
IMAGE_MAX_WIDTH=4000
IMAGE_MAX_HEIGHT=4000
IMAGE_QUALITY=90

# Password Generator Configuration
DEFAULT_PASSWORD_LENGTH=12
